# RTMP_HMonitor Sample Environment Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=5000
LOG_LEVEL=DEBUG

# FFprobe Settings
FFPROBE_WORKERS=4
FFPROBE_TIMEOUT=10
METRICS_UPDATE_INTERVAL=0.5  # seconds

# Streams Configuration
# Comma-separated list of RTMP stream URLs to monitor
RTMP_STREAMS=rtmp://example.com/live/stream1,rtmp://example.com/live/stream2

# Network Monitoring
# Comma-separated list of endpoints to monitor for network connectivity
NETWORK_ENDPOINTS=example.com,vimeo.com,blackmagicdesign.com
PING_INTERVAL=1  # seconds

# Prometheus Configuration
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090
SCRAPE_INTERVAL=1  # seconds

# Grafana Configuration
GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin 